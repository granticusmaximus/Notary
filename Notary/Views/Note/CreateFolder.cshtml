@model Notary.Models.Folder

@{ ViewData["Title"] = "Create New Folder";
    Layout = "~/Views/Shared/_Layout.cshtml"; }



<h1>Add New Entry</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="CreateFolder">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="FolderName" class="control-label"></label>
                        <input asp-for="FolderName" class="form-control" />
                        <span asp-validation-for="FolderName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary"><i class="fa fa-floppy-o" aria-hidden="true"></i> Create Entry</button>
            </div>
        </form>
    </div>
</div>

<div>
    <button class="btn btn-secondary"><a asp-action="Index" style="color:black"><i class="fa fa-list-ul" aria-hidden="true"></i> Back to List</a></button>
</div>
<br />
<hr />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
